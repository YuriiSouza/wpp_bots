generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Driver {
  id             String   @id
  name           String?
  phone          String?
  agency         String?
  vehicleType    String?
  updatedAt      DateTime @updatedAt
  createdAt      DateTime @default(now())
}

model ConversationState {
  phone          String   @id
  step           String   // "ASK_DRIVER_ID" | "DONE"
  lastDriverId   String?
  updatedAt      DateTime @updatedAt
  createdAt      DateTime @default(now())
}